# ignore all files starting with . or ~
.*
~*

# ignore dependency directories
node_modules/
dist/
package-lock.json
composer.lock

# ignore mac files
.DS_Store
.AppleDouble
.LSOverride

# ignore composer vendor directory
/vendor

# ignore components loaded via Bower
/bower_components

# ignore OS generated files
ehthumbs.db
Thumbs.db

# ignore Editor files
*.sublime-project
*.sublime-workspace
*.komodoproject

# ignore log files and databases
*.sql
*.sqlite

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# ignore private/secret files
*.der
*.key
*.pem

